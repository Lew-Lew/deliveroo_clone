<div class="container">
  <div class="section-header-white mt-3">
      <p>Maintenant</p>
      <% if user_signed_in? %>
        <div><%= @user.address %></div>
      <% end %>
      <div class="d-flex justify-content-between mt-3">
        <h1 class="h1-20">Restaurants</h1>
        <div>
          <%= image_tag("icons/heart.svg") %>
        </div>
      </div>
    </div>


  <div class="section-categories mb-3">
    <% @categories.each do |category|%>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
        <%= category.name %>
      </div>
    <% end %>
  </div>

  <h2>Offres</h2>
  <div class="section-restaurants mb-3">
    <% @restaurants.each do |restaurant| %>
      <%= link_to restaurant_path(restaurant) do  %>
        <div class="card-item">
          <div class="card-item-img">
            <%= image_tag(restaurant.photo) %>
          </div>
          <div class="card-item-content">
            <div class="card-item-title">
              <%= restaurant.name %>
            </div>
          </div>
        </div>
      <% end %>  
    <% end %>
  </div>

  <h2>Du mal Ã  choisir ?</h2>
  <%= link_to quizz_restaurants_path, class:"button-quizz" do%>
    <p>Un petit quizz pour t'aider</p>
    <%=image_tag("icons/arrow2.svg")  %>
  <% end %>
</div>

